<h2>スケジュール編集</h2>

<%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start, "開始日" %></th>
      <td><%= f.date_field :start, min: Time.zone.now %></td>
    </tr>

    <tr>
      <th><%= f.label :end, "終了日" %></th>
      <td><%= f.date_field :end, min: Time.zone.now %></td>
    </tr>

    <tr>
      <th><%= f.label :allday, "終日" %></th>
      <td><%= f.check_box :allday, {allday: true}, "◯", "" %></td>
    </tr>

    <tr>
      <th><%= f.label :details, "詳細" %></th>
      <td><%= f.text_area :details %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "編集をやめる", :schedule %></li>
      <li><%= link_to "スケジュール一覧へ戻る", :schedules %></li>
    </ul>
  </div>
<% end %>